<wxs src="../../utils/tools.wxs" module="tools" />
<view class="postitem" data-post="{{post}}" bindtap="gotoConcent">
  <image width="100%" fit="widthFix" src="{{post.image}}" />
  <view class="info">
    <view>{{tools.parseCates(post.cates)}} / {{tools.parseTime(post.duration)}}</view>
    <view>{{post.title}}</view>
  </view>
</view>
